gem 'redis', '~> 4.1', '>= 4.1.3'
# Adds a Redis::Namespace class which can be used to namespace calls to Redis.
# This is useful when using a single instance of Redis with multiple, different applications
gem 'redis-namespace', '~> 1.7'
